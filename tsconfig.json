{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@validations/*": [
        "src/validations/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ]
    },
    "typeRoots": [
      "./src/shared/types",
      "./types",
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}